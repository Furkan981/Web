<div id="camp">
    <div class="container allcenter">
        <h1>Camping-Plaetze</h1>

        <form action="/camp">
            <label>Suche</label>
            <input type="text" value="" length="20" name="q">
            <button type="submit">Suche</button>
        </form>

        <div class="item-content">
            <table class="table" style="text-align: center;">
                <thead>
                    <th style="
                    border: none;
                ">Name</th>
                    <th style="
                    border: none;
                ">Preis</th>
                </thead>
                <tbody>
                    <% camps.forEach(function(camp){ %>
                        <tr>
                            <td>
                                <%= camp.name %>
                            </td>
                            <td>
                                <%= camp.price %>
                            </td>
                            <td> 
                            <a class="badge badge-primary" href="/camp/<%= camp.id %>">Anzeigen</a> <!-- Nur Anbieter --> <a class="badge badge-primary" href="/camp/<%= camp.id %>/edit">Bearbeiten</a></td>
                        </td>
                        </tr>
                        <% }); %>
                </tbody>
            </table>
            <a class="btn btn-primary" href="/account">Zurück</a>
            <a class="btn btn-primary" href="/camp/new">Hinzufügen</a>
        </div>
    </div>
</div>
