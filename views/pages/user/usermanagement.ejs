<div id="camp">
    <div class="container allcenter">
        <h1>User Management</h1>

        <form action="/camp">
            <label>Suche</label>
            <input type="text" value="" length="20" name="q">
            <button type="submit">Suche</button>
        </form>

        <div class="item-content">
            <table class="table">
                <thead>
                    <th>Name</th>
                    <th>E-Mail</th>
                    <th>superAdmin?</th>
                </thead>
                <tbody>
                   <% users.forEach(function(user){ %>
                        <tr>
                            <td>
                                <%= user.fullName %>
                            </td>
                            <td>
                                <%= user.emailAddress %>
                           </td>
                           <td>
                            
                            <%= user.isSuperAdmin %>
                       </td>
                                <a class="badge badge-primary" href="/users/delete-user/<%= user.id %>">Löschen</a>
                            </td>
                        </tr>
                         <% }); %>
                </tbody>
            </table>
            <a class="btn btn-primary" href="/account">Zurück</a>
            
        </div>
    </div>
</div>
