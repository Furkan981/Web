<head>
    <meta charset="utf-8" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.5.0/font/bootstrap-icons.css" rel="stylesheet" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-datepicker/1.9.0/css/bootstrap-datepicker.min.css">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.4.1/jquery.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-datepicker/1.9.0/js/bootstrap-datepicker.min.js"></script>
</head>

<body style="min-height: 100% !important;">
    <section class="py-5" style="min-height: 100%;">
        <div class="container px-4 px-lg-5 my-5" style="min-height: 100%;">
            <div class="row gx-4 gx-lg-5 align-items-center">
                <div class="col-md-6"><img class="card-img-top mb-5 mb-md-0" src="/<%= camps.id %>" alt="campsBild" style="border-radius: 10%;border: 2px solid #178ca4;" /></div>
                <div class="col-md-6">
                    <div class="small mb-1">
                        <%= camps.vermieterId %>
                    </div>
                    <h1 class="display-5 fw-bolder">
                        <%=camps.name %>
                    </h1>
                    <div class="fs-5 mb-5">
                        <span> <%= camps.price %>€</span>
                    </div>
                    <section class="container">
                        <form action="/booking/confirm" method="GET">
                            <input type="hidden" name="_csrf" value="<%= _csrf %>" />
                            <div class="row form-group">
                                <label for="date" class="col-sm-1 col-form-label">Bis wann soll das Produkt abholbar sein?</label>
                                <div class="col-sm-4">
                                    <span class="input-group-append form-group">
                                  <input data-provide="datepicker" class="form-control"  type="datebis" id="datebis" name="datebis" style="border: 2px solid #178ca4;" onchange="resetSelection()" id="resdate" onchange="check_dates()">
                                    <span class="input-group-text bg-white">
                                        <i class="fa fa-calendar"></i>
                                    </span>
                                    </span>
                                </div>
                            </div>
                            <div id="err-msg"></div>
                            <button id="final_but" type="submit" class="btn mb-4 btn-outline-info" disabled>Bestellen</button>
                        </form>
                    </section>
                </div>
            </div>
        </div>
    </section>

    <div class="section-header" style="text-align: center; margin-bottom:7%; width: 60%; margin-left: auto; margin-right: auto;">
        <h4 class="section-description">
            <%= spots %>
        </h4>
    </div>

<div class="item-content">
        <table class="table">
            <thead>
                <tr>
                    <th>spots</th>
                </tr>
            </thead>
            <tbody>
              <%spots.forEach(function(spot){ %>   
              
                <td id="tdid"><%=spot.spotnumber%></td>
              
              <% }); %>
            </tbody>
        </table>
    </div>
        
   


    <div class="row ml-auto mr-auto" style="width: 65%; text-align: center;">
        
        <div class="col-lg-2 m-2" style="border: 2px solid #178ca4; border-radius: 10px;">
            <div class="card-body">
                <h4 class="card-title">
                    Preis
                </h4>
                <p class="card-text">
                    <%= camps.price %>€</p>
            </div>
        </div>
    </div>


    <script>
        function check_dates() {

            var date_b = document.getElementById("datebis").value;
            let date_now = Date.now()
            let button = document.getElementById("final_but");

            if (!date_b) {
                button.disabled = true
            } else if (date_b < date_now) {
                button.disabled = true
            }
            if (date_b && date_now <= date_b) {
                button.disabled = false;
            }
        }

        window.onload = () => createGrid(); 
    </script>
</body>





</div>